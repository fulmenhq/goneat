{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.fulmenhq.dev/enact/v1.0.0/taxonomy/system-components/system-components.schema.json",
  "title": "System Components Taxonomy",
  "description": "Defines the structure for system component definitions. Components are logical building blocks (reverse-proxy, lms, identity) with swappable implementations (caddy, tutor, authentik).",
  "$defs": {
    "componentRequirements": {
      "type": "object",
      "description": "Infrastructure requirements for a component at a given variant level",
      "properties": {
        "min_nodes": {
          "type": "integer",
          "minimum": 1,
          "default": 1,
          "description": "Minimum number of compute nodes required"
        },
        "min_vcpus": {
          "type": "integer",
          "minimum": 1,
          "description": "Minimum vCPUs per node"
        },
        "min_memory_gb": {
          "type": "number",
          "minimum": 0.5,
          "description": "Minimum RAM in gigabytes per node"
        },
        "min_storage_gb": {
          "type": "integer",
          "minimum": 1,
          "description": "Minimum disk storage in gigabytes"
        },
        "load_balancer": {
          "type": "boolean",
          "default": false,
          "description": "Requires external load balancer"
        },
        "shared_storage": {
          "type": "boolean",
          "default": false,
          "description": "Requires shared/distributed storage (NFS, S3, etc.)"
        },
        "managed_database": {
          "type": "boolean",
          "default": false,
          "description": "Requires managed database service"
        },
        "external_dns": {
          "type": "boolean",
          "default": false,
          "description": "Requires external DNS management"
        },
        "tls_certificates": {
          "type": "boolean",
          "default": false,
          "description": "Requires TLS certificate provisioning"
        }
      },
      "additionalProperties": false
    },
    "variantBehavior": {
      "type": "object",
      "description": "How an implementation behaves for a specific system variant",
      "properties": {
        "mode": {
          "type": "string",
          "description": "Operational mode for this variant",
          "examples": [
            "single",
            "clustered",
            "managed",
            "external"
          ]
        },
        "template": {
          "type": "string",
          "description": "Configuration template to use",
          "examples": [
            "Caddyfile.standard.tmpl",
            "tutor-config.ha.tmpl"
          ]
        },
        "requires": {
          "$ref": "#/$defs/componentRequirements"
        },
        "additional_plugins": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Additional plugins or modules to enable"
        },
        "notes": {
          "type": "string",
          "description": "Human-readable notes about this variant behavior"
        }
      },
      "additionalProperties": false
    },
    "implementation": {
      "type": "object",
      "description": "A specific implementation of a component (e.g., caddy for reverse-proxy)",
      "properties": {
        "slug": {
          "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/slug"
        },
        "name": {
          "type": "string",
          "description": "Human-readable name"
        },
        "description": {
          "type": "string",
          "description": "What this implementation provides"
        },
        "homepage": {
          "type": "string",
          "format": "uri",
          "description": "Project homepage URL"
        },
        "docs_url": {
          "type": "string",
          "format": "uri",
          "description": "Documentation URL"
        },
        "license": {
          "type": "string",
          "description": "SPDX license identifier",
          "examples": [
            "Apache-2.0",
            "MIT",
            "GPL-3.0-only",
            "AGPL-3.0-only"
          ]
        },
        "maturity": {
          "type": "string",
          "enum": [
            "experimental",
            "beta",
            "stable",
            "deprecated"
          ],
          "description": "Implementation maturity level"
        },
        "default_version": {
          "type": "string",
          "description": "Default version to deploy"
        },
        "supported_versions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of supported versions"
        },
        "variant_behavior": {
          "type": "object",
          "description": "Behavior configuration per system variant",
          "additionalProperties": {
            "$ref": "#/$defs/variantBehavior"
          },
          "propertyNames": {
            "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/slug"
          }
        },
        "dependencies": {
          "type": "array",
          "items": {
            "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/slug"
          },
          "description": "Component slugs this implementation depends on"
        },
        "conflicts_with": {
          "type": "array",
          "items": {
            "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/slug"
          },
          "description": "Implementation slugs this cannot run alongside"
        },
        "tags": {
          "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/tagList"
        }
      },
      "required": [
        "slug",
        "name"
      ],
      "additionalProperties": false
    },
    "component": {
      "type": "object",
      "description": "A logical system component with one or more implementations",
      "properties": {
        "slug": {
          "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/slug"
        },
        "name": {
          "type": "string",
          "description": "Human-readable component name"
        },
        "description": {
          "type": "string",
          "description": "What this component does in the system"
        },
        "category": {
          "type": "string",
          "enum": [
            "infrastructure",
            "platform",
            "application",
            "integration",
            "observability"
          ],
          "description": "Component category for organization"
        },
        "required": {
          "type": "boolean",
          "default": false,
          "description": "Whether this component is required for all deployments"
        },
        "default_implementation": {
          "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/slug",
          "description": "Default implementation if not specified in recipe"
        },
        "implementations": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/implementation"
          },
          "minItems": 1,
          "description": "Available implementations for this component"
        },
        "ports": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "port": {
                "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/port"
              },
              "protocol": {
                "type": "string",
                "enum": [
                  "tcp",
                  "udp"
                ],
                "default": "tcp"
              },
              "purpose": {
                "type": "string"
              },
              "public": {
                "type": "boolean",
                "default": false
              }
            },
            "required": [
              "port",
              "purpose"
            ]
          },
          "description": "Standard ports this component uses"
        },
        "provides_capability": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Capabilities this component provides to others",
          "examples": [
            [
              "tls-termination",
              "reverse-proxy",
              "static-hosting"
            ]
          ]
        }
      },
      "required": [
        "slug",
        "name",
        "category",
        "implementations"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "schema_version": {
      "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/schemaVersion"
    },
    "taxonomy": {
      "const": "system-components",
      "description": "Taxonomy identifier"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "components": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/component"
      },
      "description": "List of system component definitions"
    }
  },
  "required": [
    "schema_version",
    "taxonomy",
    "components"
  ],
  "additionalProperties": false
}
