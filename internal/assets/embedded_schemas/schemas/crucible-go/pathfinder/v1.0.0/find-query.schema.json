{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.fulmenhq.dev/gofulmen/pathfinder/find-query-v1.0.0.json",
  "title": "FindQuery",
  "description": "Parameters for file discovery operations in pathfinder",
  "type": "object",
  "properties": {
    "root": {
      "type": "string",
      "description": "Root directory to search from",
      "minLength": 1
    },
    "include": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "Glob patterns to include"
      },
      "description": "Patterns to include in search"
    },
    "exclude": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "Glob patterns to exclude"
      },
      "description": "Patterns to exclude from search"
    },
    "maxDepth": {
      "type": "integer",
      "description": "Maximum directory depth (0 = unlimited)",
      "minimum": 0,
      "default": 0
    },
    "followSymlinks": {
      "type": "boolean",
      "description": "Whether to follow symbolic links",
      "default": false
    },
    "includeHidden": {
      "type": "boolean",
      "description": "Whether to include hidden files/directories",
      "default": false
    }
  },
  "required": [
    "root"
  ]
}
