{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.fulmenhq.dev/enact/v1.0.0/taxonomy/cloud-providers/cloud-providers.schema.json",
  "title": "Cloud Providers Taxonomy",
  "description": "Defines the structure for cloud provider definitions. Providers offer infrastructure services (compute, storage, database) used by Enact deployments.",
  "$defs": {
    "serviceCapability": {
      "type": "object",
      "description": "A capability offered by the provider",
      "properties": {
        "slug": {
          "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/slug"
        },
        "name": {
          "type": "string"
        },
        "available": {
          "type": "boolean",
          "default": true
        },
        "managed": {
          "type": "boolean",
          "default": false,
          "description": "Whether this is a managed service"
        },
        "notes": {
          "type": "string"
        }
      },
      "required": [
        "slug",
        "available"
      ],
      "additionalProperties": false
    },
    "region": {
      "type": "object",
      "description": "A provider region/datacenter",
      "properties": {
        "slug": {
          "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/slug"
        },
        "name": {
          "type": "string",
          "description": "Human-readable region name"
        },
        "location": {
          "type": "string",
          "description": "Geographic location",
          "examples": [
            "New York, USA",
            "Frankfurt, Germany"
          ]
        },
        "available": {
          "type": "boolean",
          "default": true
        },
        "features": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Features available in this region"
        }
      },
      "required": [
        "slug",
        "name"
      ],
      "additionalProperties": false
    },
    "cliTool": {
      "type": "object",
      "description": "CLI tool for interacting with the provider",
      "properties": {
        "name": {
          "type": "string",
          "description": "Tool name/command"
        },
        "install_url": {
          "type": "string",
          "format": "uri",
          "description": "Installation documentation URL"
        },
        "install_command": {
          "type": "string",
          "description": "Quick install command",
          "examples": [
            "brew install doctl",
            "pip install awscli"
          ]
        },
        "auth_env_var": {
          "type": "string",
          "description": "Environment variable for authentication",
          "examples": [
            "DIGITALOCEAN_TOKEN",
            "AWS_ACCESS_KEY_ID"
          ]
        },
        "version_command": {
          "type": "string",
          "description": "Command to check installed version",
          "examples": [
            "doctl version",
            "aws --version"
          ]
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "provider": {
      "type": "object",
      "description": "A cloud infrastructure provider",
      "properties": {
        "slug": {
          "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/slug"
        },
        "name": {
          "type": "string",
          "description": "Human-readable provider name"
        },
        "description": {
          "type": "string",
          "description": "Provider description and positioning"
        },
        "homepage": {
          "type": "string",
          "format": "uri"
        },
        "docs_url": {
          "type": "string",
          "format": "uri"
        },
        "console_url": {
          "type": "string",
          "format": "uri",
          "description": "Web console URL"
        },
        "status_url": {
          "type": "string",
          "format": "uri",
          "description": "Status page URL"
        },
        "maturity": {
          "type": "string",
          "enum": [
            "experimental",
            "beta",
            "stable",
            "deprecated"
          ],
          "description": "Enact support maturity for this provider"
        },
        "tier": {
          "type": "string",
          "enum": [
            "primary",
            "secondary",
            "community"
          ],
          "description": "Support tier in Enact ecosystem"
        },
        "capabilities": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/serviceCapability"
          },
          "description": "Services and capabilities offered"
        },
        "regions": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/region"
          },
          "description": "Available regions"
        },
        "cli": {
          "$ref": "#/$defs/cliTool"
        },
        "api_base_url": {
          "type": "string",
          "format": "uri",
          "description": "Base URL for API calls"
        },
        "terraform_provider": {
          "type": "string",
          "description": "Terraform provider name",
          "examples": [
            "digitalocean/digitalocean",
            "hashicorp/aws"
          ]
        },
        "supported_variants": {
          "type": "array",
          "items": {
            "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/slug"
          },
          "description": "System variants this provider supports"
        },
        "cost_tier": {
          "type": "string",
          "enum": [
            "budget",
            "standard",
            "premium"
          ],
          "description": "Relative cost positioning"
        },
        "notes": {
          "type": "string",
          "description": "Additional notes about using this provider"
        },
        "tags": {
          "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/tagList"
        }
      },
      "required": [
        "slug",
        "name",
        "maturity",
        "tier"
      ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "schema_version": {
      "$ref": "https://schemas.fulmenhq.dev/enact/v1.0.0/foundation/types.schema.json#/$defs/schemaVersion"
    },
    "taxonomy": {
      "const": "cloud-providers",
      "description": "Taxonomy identifier"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "providers": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/provider"
      },
      "description": "List of cloud provider definitions"
    }
  },
  "required": [
    "schema_version",
    "taxonomy",
    "providers"
  ],
  "additionalProperties": false
}
