{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.fulmenhq.dev/library/foundry/v1.0.0/mime-types.schema.json",
  "title": "MIME Types Catalog",
  "description": "Curated set of media types for helper libraries",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^[vV]?\\d+\\.\\d+\\.\\d+$"
    },
    "types": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$"
          },
          "mime": {
            "type": "string",
            "pattern": "^[a-z0-9.+-]+/[a-z0-9.+-]+$"
          },
          "name": {
            "type": "string"
          },
          "extensions": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-z0-9]+$"
            },
            "uniqueItems": true
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "mime"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "version",
    "types"
  ],
  "additionalProperties": false
}
