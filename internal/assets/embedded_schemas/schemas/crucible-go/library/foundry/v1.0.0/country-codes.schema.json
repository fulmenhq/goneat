{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.fulmenhq.dev/library/foundry/v1.0.0/country-codes.schema.json",
  "title": "ISO Country Codes",
  "description": "ISO 3166 country code records",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^[vV]?\\d+\\.\\d+\\.\\d+$"
    },
    "countries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "alpha2": {
            "type": "string",
            "pattern": "^[A-Z]{2}$"
          },
          "alpha3": {
            "type": "string",
            "pattern": "^[A-Z]{3}$"
          },
          "numeric": {
            "type": "string",
            "pattern": "^\\d{3}$"
          },
          "name": {
            "type": "string"
          },
          "officialName": {
            "type": "string"
          }
        },
        "required": [
          "alpha2",
          "alpha3",
          "numeric",
          "name"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "version",
    "countries"
  ],
  "additionalProperties": false
}
