{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.fulmenhq.dev/library/foundry/v1.0.0/patterns.schema.json",
  "title": "Foundry Pattern Catalog",
  "description": "Language-agnostic catalog of reusable patterns (regex, glob, etc.)",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "description": "Catalog version (CalVer or SemVer)",
      "pattern": "^[vV]?\\d+\\.\\d+\\.\\d+$"
    },
    "patterns": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$",
            "description": "Unique identifier (kebab-case)"
          },
          "name": {
            "type": "string",
            "description": "Human-readable label"
          },
          "kind": {
            "type": "string",
            "enum": [
              "regex",
              "glob",
              "literal"
            ],
            "description": "Pattern type"
          },
          "pattern": {
            "type": "string",
            "description": "Pattern string in canonical form"
          },
          "flags": {
            "type": "object",
            "description": "Optional flags per language runtime",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "unicode": {
                  "type": "boolean"
                },
                "ignoreCase": {
                  "type": "boolean"
                },
                "multiline": {
                  "type": "boolean"
                },
                "dotAll": {
                  "type": "boolean"
                }
              },
              "additionalProperties": {
                "type": "boolean"
              }
            }
          },
          "description": {
            "type": "string",
            "description": "Usage notes"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "id",
          "name",
          "kind",
          "pattern"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "version",
    "patterns"
  ],
  "additionalProperties": false
}
